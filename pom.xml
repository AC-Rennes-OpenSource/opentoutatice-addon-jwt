<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>opentoutatice-ecm.jwt</groupId>
	<artifactId>opentoutatice-jwt-parent</artifactId>
	<packaging>pom</packaging>
	<name>jwt feature - parent</name>
	<description>jwt addon.</description>
	<version>4.7-SNAPSHOT</version>

	<properties>
		<nuxeo.version>RAB-6.1.5</nuxeo.version>
		<!-- <nuxeo.cap.distribution.version>RAB-6.1.5</nuxeo.cap.distribution.version> --> 
		<ottc.version>RAB-4.7.44</ottc.version>
	</properties>

	<modules>
	   <module>opentoutatice-addon-jwt-ecm</module>
	   <!-- <module>opentoutatice-addon-jwt-marketplace</module> -->
	</modules>
	
	<dependencyManagement>
		<dependencies>
		<!-- 
		     <dependency>
		        <groupId>org.nuxeo.ecm.distribution</groupId>
		        <artifactId>nuxeo-distribution</artifactId>
		        <version>${nuxeo.version}</version>
		        <type>pom</type>
		        <scope>import</scope>
		    </dependency>

		    <dependency>
		        <groupId>org.nuxeo.ecm.distribution</groupId>
		        <artifactId>nuxeo-distribution-cap</artifactId>
		        <version>${nuxeo.cap.distribution.version}</version>
		        <type>pom</type>
		    </dependency>
		    -->
		    <dependency>
				<groupId>org.nuxeo.ecm.automation</groupId>
				<artifactId>nuxeo-automation-core</artifactId>
				<version>${nuxeo.version}</version>
			</dependency>
            
            <dependency>
				<groupId>org.nuxeo.ecm.platform</groupId>
		    	<artifactId>nuxeo-features-parent</artifactId>
		    	<version>${nuxeo.version}</version>
			</dependency>
			<dependency>
				<groupId>opentoutatice-ecm.platform</groupId>
				<artifactId>opentoutatice-ecm-platform-core</artifactId>
				<version>${ottc.version}</version>
			</dependency>
			<dependency>
				<groupId>opentoutatice-ecm.platform</groupId>
				<artifactId>opentoutatice-ecm-platform-web</artifactId>
				<version>${ottc.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.2.1</version>
                <configuration>
                    <releaseProfiles>unpack,pack</releaseProfiles>
                    <preparationGoals>clean install</preparationGoals>
                    <goals>deploy</goals>
                </configuration>
            </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
            <!-- Disable strict javadoc checking since java8 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <additionalOptions>
                        <additionalOption>-Xdoclint:none</additionalOption>
                    </additionalOptions>
                </configuration>
            </plugin>			
		</plugins>			
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.nuxeo.build</groupId>
					<artifactId>ant-assembly-maven-plugin</artifactId>
					<version>2.0.1</version>
					<extensions>true</extensions>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<scm>
		<url>https://github.com/AC-Rennes-OpenSource/opentoutatice-addon-jwt</url>
		<connection>scm:git:https://github.com/AC-Rennes-OpenSource/opentoutatice-addon-jwt.git</connection>
		<developerConnection>scm:git:https://github.com/AC-Rennes-OpenSource/opentoutatice-addon-jwt.git</developerConnection>
		<tag>HEAD</tag> 
	</scm>

        <distributionManagement>
                <repository>
                        <id>${releaseRepoId}</id>
                        <url>${releaseRepoUrl}</url>
                </repository>
                <snapshotRepository>
                        <id>${snapshotRepoId}</id>
                        <url>${snapshotRepoUrl}</url>
                </snapshotRepository>
        </distributionManagement>
	
</project>

